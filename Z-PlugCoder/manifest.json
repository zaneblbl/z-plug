{
    "name": "z-plug",
    "description": "z-plug",
    "version": "1.0",
    "manifest_version": 2,

    "browser_action": {
        "default_popup": "index.html",
        "default_icon": "logo.png",
        "default_title": "z-plug"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+Q"
            },
            "description": "Open Translate"
        }
    },
    "permissions": [
        "contextMenus",
        "storage",
        "notifications",
        "tabs",
        "*://*/*"
    ],
    "icons": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "css": ["./TranslatePlug/translate.css",
            "./WindowPlug/window.css",
            "./Sprite/sprite.css"
        ],
        "js": ["./TranslatePlug/translate.js",
            "./WindowPlug/window.js",
            "./Sprite/sprite.js",
            "./LightClose/LightClose.js"
        ],
        "run_at": "document_end"
    }]

}